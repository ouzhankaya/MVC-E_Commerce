
@{
    ViewBag.Title = "CreditCardInfo";
}

<div class="container">
    <!-- content begin -->
    <div class="row mt-4 mb-2">
        <div class="col-md-12">
            <h2>Ödeme Sayfası</h2>
            <hr>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-md-2 text-center">
            <h2>
                <span class="fa fa-credit-card fa-4x  text-success"></span>
            </h2>
        </div>
        <div class="col-md-10">

            <div class="form-group row">
                <div class="col-md-12">
                    <hr>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 text-danger">Kart Numarası :</label>
                <div class="col-md-10">
                    <input type="text" class="form-control ccFormatMonitor" name="cc" placeholder="0000 0000 0000 0000" maxlength="19">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 text-danger">Ad &amp; Soyad :</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" placeholder="kart sahibi ad, soyad">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 text-danger">CVC :</label>
                <div class="col-md-2">
                    <input type="text" class="form-control" placeholder="000" maxlength="3" pattern="[1-9]{3}">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 text-danger">Son Kul. :</label>
                <div class="col-md-2">
                    <select class="form-control mr-4">
                        <option value="01">01</option>
                        <option value="02">02</option>
                        <option value="03">03</option>
                        <option value="04">04</option>
                        <option value="05">05</option>
                        <option value="06">06</option>
                        <option value="07">07</option>
                        <option value="07">08</option>
                        <option value="07">09</option>
                        <option value="07">10</option>
                        <option value="07">11</option>
                        <option value="07">12</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-control">
                        <option value="2018">2018</option>
                        <option value="2019">2019</option>
                        <option value="2020">2020</option>
                        <option value="2018">2021</option>
                        <option value="2019">2022</option>
                        <option value="2020">2023</option>
                        <option value="2018">2024</option>
                        <option value="2019">2025</option>
                        <option value="2020">2026</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    @using (Html.BeginForm())
    {
    <div class="row my-2">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success">
                <span class="fa fa-credit-card mr-2"></span> Öde
            </button>
        </div>
    </div>
    }
    
    <div class="row my-2">
        <div class="col-md-10 offset-md-2">
            <h1 class="text-success" hidden>
                <span class="fa fa-check"></span>
                <b>Ödeme Başarılı.</b>
            </h1>
        </div>
       
    </div>
    <!-- content end -->
</div>

<script src="~/Scripts/CreditCard.js"></script>

<script>
    $(".btn-success").click(function () {
        $(".text-succes").show();
    })
</script>