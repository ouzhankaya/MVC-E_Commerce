@model Product
@using ETicaret.Models
    @{ 
        if (string.IsNullOrEmpty(Model.ImageName))
        {
            Model.ImageName = "http://placehold.it/300x300";
        }
        ECommerceEntities db = new ECommerceEntities();
    }

<div class="row mb-2 mt-4">
    <div class="col-md-4">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/images/@Model.ImageName" />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/@Model.ImageName" />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/@Model.ImageName" />
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span style="color:black" class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span style="color:black" class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span style="color:black" class="carousel-control-next-icon" aria-hidden="true"></span>
                <span style="color:black" class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-md-8">
        <div class="form-group text-right">
            <div class="col-md-12">
                <h2>@Model.Name</h2>
            </div>
            <div class="col-md-12">
                <h2 class="text-danger">@Model.Price ₺</h2>
            </div>
        </div>
        <div class="form-group">
            <p class="text-justify">
               @Model.Description
            </p>
        </div>
        <div class="form-group">
            <span class="text-danger mr-4">Derecelendirme : </span>
            <span class="text-warning">
                @for (int i = 0; i < Model.StarPoint; i++)
                {
                    <span class="fa fa-star"></span>
                }
                @for (int i = 0; i < 5 - Model.StarPoint; i++)
                {
                    <span class="fa fa-star-o"></span>
                }
                (@Model.StarGivenMemberCount kişi oyladı)
            </span>
        </div>
    </div>
</div>
